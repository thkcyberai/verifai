# Core Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Feature Flags
ENABLE_REAL_ADAPTERS=false

# API Keys
OPENAI_API_KEY=sk-your-openai-key-here
FACTIAI_API_KEY=fct-your-factiai-key-here
BRAVE_SEARCH_API_KEY=your-brave-search-key-here

# Database
DATABASE_URL=postgresql://factiai:factiai_pass@localhost:5432/factiai_db
REDIS_URL=redis://localhost:6379/0

# Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=factiai-media
S3_UPLOAD_PREFIX=uploads

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:19006,exp://localhost:19000

# Timeouts (seconds)
LLM_TIMEOUT=30
SEARCH_TIMEOUT=20
FORENSICS_TIMEOUT=60
UPLOAD_EXPIRES_IN=900

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_UPLOAD_SIZE_MB=100

# Monitoring
ENABLE_TELEMETRY=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
